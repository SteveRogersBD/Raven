<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlateIt" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/chef_orange</item>
        <item name="colorPrimaryVariant">@color/chef_orange_light</item>
        <item name="colorOnPrimary">@color/chef_surface</item>
        
        <item name="colorSecondary">@color/chef_dark</item>
        <item name="colorOnSecondary">@color/chef_surface</item>
        
        <item name="android:colorBackground">@color/chef_background</item>
        <item name="colorSurface">@color/chef_surface</item>
        <item name="colorOnSurface">@color/chef_dark</item>
        
        <!-- Status Bar & Nav Bar (Transparent to show root gradient) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">false</item>
    </style>

    <style name="Theme.PlateIt" parent="Base.Theme.PlateIt" />
    
    <style name="Theme.PlateIt.BottomNav" parent="ThemeOverlay.Material3.DynamicColors.Light">
        <item name="colorSecondaryContainer">@color/app_primary</item> <!-- Solid white pill for selection -->
        <item name="colorOnSecondaryContainer">#FF5722</item> <!-- Dark orange icon/text on pill -->
<!--        <item name="android:background">@color/app_primary</item>-->
    </style>

    <style name="ShapeAppearance.PlateIt.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>