<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlateIt" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/chef_orange</item>
        <item name="colorPrimaryVariant">@color/chef_orange_light</item>
        <item name="colorOnPrimary">@color/chef_surface</item>
        
        <item name="colorSecondary">@color/chef_dark</item>
        <item name="colorOnSecondary">@color/chef_surface</item>
        
        <item name="android:colorBackground">@color/chef_background</item>
        <item name="colorSurface">@color/chef_surface</item>
        <item name="colorOnSurface">@color/chef_dark</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/chef_orange</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="Theme.PlateIt" parent="Base.Theme.PlateIt" />
    
    <style name="Theme.PlateIt.BottomNav" parent="ThemeOverlay.Material3.DynamicColors.Light">
        <item name="colorSecondaryContainer">@color/chef_orange_light</item>
        <item name="colorOnSecondaryContainer">@color/chef_orange</item>
        <item name="android:background">@color/chef_surface</item>
    </style>
</resources>