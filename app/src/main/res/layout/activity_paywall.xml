<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Top Header Image -->
        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/grad_sunrise" 
            app:layout_constraintTop_toTopOf="parent" />
            <!-- Note: Using grad_sunrise as placeholder for the food image if user didn't provide asset yet. 
                 Ideally we would use a real image here. -->

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_white_bg"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/gray_600"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-bold"
            android:text="Unlock PlateIt Pro for smarter meal planning"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgHeader" />

        <!-- Benefits List -->
        <LinearLayout
            android:id="@+id/benefitsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <!-- Benefit 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_orange" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Unlimited AI recipe chat with Pro"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Benefit 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_orange" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Token credits for advanced AI tools"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

             <!-- Benefit 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_orange" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Personalized meal plans &amp; grocery lists"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

             <!-- Benefit 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="6dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_orange" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Save favorites, shopping, and cook history"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgSubscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/benefitsContainer">

            <!-- Monthly Option -->
            <RadioButton
                android:id="@+id/rbMonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_subscription_bg"
                android:button="@null"
                android:padding="16dp"
                android:text="Monthly\nFull access for just $4.99/mo"
                tools:text="Monthly\nFull access for just $4.99/mo"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableStart="@drawable/selector_radio_circle"
                android:drawablePadding="16dp"
                android:checked="true" />

        </RadioGroup>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Continue"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/rgSubscription"
            app:cornerRadius="28dp"
            android:backgroundTint="#FF6F43" /> 
            <!-- Using the orange color from the image -->

        <!-- Footer Links -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnContinue">
            
            <TextView
                android:id="@+id/tvRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restore Purchases"
                android:textStyle="bold"
                android:textColor="@color/black"/>
                
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Terms    Privacy"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
