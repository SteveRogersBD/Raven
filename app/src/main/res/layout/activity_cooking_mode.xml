<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_cream"
    android:fitsSystemWindows="true"
    tools:context=".CookingModeActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/gray_800"/>

            <TextView
                android:id="@+id/tvStepProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Step 1 of 8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"/>
        </RelativeLayout>

        <!-- Recipe Title Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/app_primary"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/tvRecipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>
        </androidx.cardview.widget.CardView>

        <!-- Source Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvSourceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/imgSourceThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvSourceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="View Original Recipe"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_link"
                    app:tint="@color/app_primary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:progress="10"
            android:max="100"/>
    </LinearLayout>

    <!-- Global Loading Indicator - Lottie -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/apiLoadingIndicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"
        android:elevation="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ViewPager for Steps -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerSteps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/cvAssistantResponse" />


    <!-- Assistant Response Card (Hidden by default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAssistantResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/assistantBar">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAssistantText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The cheese should be golden brown and bubbling."
                android:textColor="@color/gray_800"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- Dynamic Content Lists -->
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecipeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                tools:listitem="@layout/item_blog_card"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredientList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible" 
                tools:listitem="@layout/item_ingredient"
                tools:itemCount="4"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVideoList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                tools:listitem="@layout/item_video_card"/>
                
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Assistant Bar -->
    <LinearLayout
        android:id="@+id/assistantBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomControls">
        
        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_camera_alt"
            app:tint="@color/gray_600"/>
            
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:src="@drawable/ic_mic"
            app:backgroundTint="@color/app_primary"
            app:tint="@color/black"
            app:elevation="6dp"/>
            
        <ImageButton
            android:id="@+id/btnKeyboard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_keyboard"
            app:tint="@color/gray_600"/>
            
    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrevious"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="30dp"
            app:strokeColor="@color/gray_800"
            app:strokeWidth="1dp"
            style="@style/Widget.MaterialComponents.Button.Icon"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Next Step"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="@color/app_primary"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="end"
            app:iconTint="@color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
