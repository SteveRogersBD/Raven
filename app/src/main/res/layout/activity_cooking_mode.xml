<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".CookingModeActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/grad_chef_orange"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvStepProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Step 1 of 8"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/white" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:progress="10"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@id/topBar"/>

    <!-- Recipe Title (Condensed) -->
    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/gray_800"
        android:textSize="14sp"
        android:textStyle="italic"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/progressBar"/>

    <!-- ViewPager for Steps (Expanded) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerSteps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecipeName"
        app:layout_constraintBottom_toTopOf="@id/cvAssistantResponse" />

    <!-- Source Card (Small Overlay) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSourceCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#CCFFFFFF"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRecipeName">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgSourceThumbnail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_play_arrow"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:id="@+id/tvSourceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch Video"
                android:textColor="@color/gray_800"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Global Loading Indicator -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/apiLoadingIndicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Assistant Response Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAssistantResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/assistantBar">
        
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- User Query Bubble -->
                <LinearLayout
                    android:id="@+id/userQueryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginBottom="12dp">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:background="@drawable/bg_user_bubble"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgUserQuery"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                        <TextView
                            android:id="@+id/tvUserQuery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="How does this look?"
                            android:textColor="@color/white"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#11000000"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvAssistantText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The cheese should be golden brown."
                    android:textColor="@color/gray_800"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Dynamic Content Lists -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecipeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvIngredientList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvVideoList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"/>
                    
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Assistant Bar -->
    <LinearLayout
        android:id="@+id/assistantBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_camera_alt"
            app:tint="@color/gray_600"/>
            
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/ic_mic"
            app:backgroundTint="@color/app_primary"
            app:tint="@color/black"
            app:fabSize="mini"
            app:elevation="4dp"/>
            
        <ImageButton
            android:id="@+id/btnKeyboard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_keyboard"
            app:tint="@color/gray_600"/>
            
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
