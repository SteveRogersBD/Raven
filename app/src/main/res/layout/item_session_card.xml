<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/soft_cream"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    tools:targetApi="p">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/ivSessionStatus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_restaurant_menu"
            android:layout_marginEnd="12dp" />

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSessionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/tech_black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvSessionProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step 3 â€¢ In Progress"
                android:textSize="13sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Resume Button (only for active) -->
        <Button
            android:id="@+id/btnSessionResume"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Resume"
            android:textSize="12sp"
            android:backgroundTint="@color/tech_black"
            android:textColor="@color/plain_white"
            android:minWidth="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
