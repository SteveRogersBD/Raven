<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/chef_surface"
    android:outlineSpotShadowColor="@color/chef_orange"
    android:outlineAmbientShadowColor="@color/chef_orange"
    tools:targetApi="p">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/videoThumbnail"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDeleteCookbook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_tag_bg"
            android:backgroundTint="#88000000"
            android:src="@drawable/ic_delete"
            app:tint="@color/white"
            android:padding="6dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="@id/videoThumbnail"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail"
            android:contentDescription="Delete Recipe" />
            
        <!-- Gradient Overlay -->
        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/grad_dark_mesh"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintStart_toStartOf="@id/videoThumbnail"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail"/>

        <!-- Time Badge -->
        <TextView
            android:id="@+id/videoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 min"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_tag_bg"
            android:backgroundTint="#AA000000"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textSize="11sp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail" />

        <!-- Title -->
        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delicious Video Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tech_black"
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/videoThumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
            
        <TextView
            android:id="@+id/tvVideoChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Recipe"
            android:textColor="@color/gray_600"
            android:textSize="12sp"
            android:paddingHorizontal="12dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/videoTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
