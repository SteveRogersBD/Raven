<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@drawable/grad_chef_orange"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    android:elevation="4dp"
    android:translationZ="4dp"
    android:fitsSystemWindows="true">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/appLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.PlateIt.Circle"
        android:scaleType="centerCrop"
        android:src="@drawable/app_logo" /> 

    <TextView
        android:id="@+id/tvAppBarTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:text="PlateIt"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTextAction"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:text="Action"
        android:textSize="12sp"
        android:textColor="@color/chef_orange"
        app:backgroundTint="@color/white"
        android:visibility="gone"
        app:cornerRadius="20dp"
        android:paddingHorizontal="16dp" />

    <ImageButton
        android:id="@+id/btnSecondaryAction"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Secondary Action"
        android:src="@drawable/ic_history"
        app:tint="@color/white"
        android:visibility="gone" />

</LinearLayout>
