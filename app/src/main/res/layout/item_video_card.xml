<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/chef_surface"
    android:outlineSpotShadowColor="@color/chef_red"
    android:outlineAmbientShadowColor="@color/chef_red"
    tools:targetApi="p">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/videoThumbnail"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
            
        <!-- Gradient Overlay for Thumbnail Bottom -->
        <View
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/grad_dark_mesh"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintStart_toStartOf="@id/videoThumbnail"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail"/>

        <!-- Time Badge (Bottom Right of Thumbnail) -->
        <TextView
            android:id="@+id/videoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 min"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/rounded_tag_bg"
            android:backgroundTint="#AA000000"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textSize="12sp"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail" />

        <!-- Title -->
        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delicious Video Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tech_black"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:fontFamily="sans-serif-bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/videoThumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
            
        <TextView
            android:id="@+id/tvVideoChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Name â€¢ 1M views"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/videoTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
